<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ExcelXml.Desktop.Views.ResponsibleDialog"
        Title="ResponsÃ¡vel"
        Width="420"
        SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner">
  <Border Padding="20" Background="White" CornerRadius="12">
    <StackPanel Spacing="12">
      <TextBlock Text="{Binding DialogTitle}" FontSize="18" FontWeight="SemiBold" />

      <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="12">
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Nome:" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Responsible.Nome, Mode=TwoWay}" />

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="CPF:" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Responsible.Cpf, Mode=TwoWay}" MaxLength="11" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="NIP:" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Responsible.Nip, Mode=TwoWay}" />

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Perfil:" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Responsible.Perfil, Mode=TwoWay}" />

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Tipo Perfil OM:" />
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Responsible.TipoPerfilOm, Mode=TwoWay}" />

        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Cod. Papem:" />
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Responsible.CodPapem, Mode=TwoWay}" />
      </Grid>

      <TextBlock Text="{Binding ValidationMessage}"
                 Foreground="DarkRed"
                 TextWrapping="Wrap"
                 IsVisible="{Binding HasValidationMessage}" />

      <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
        <Button Content="Cancelar" Click="OnCancel" />
        <Button Content="Salvar" IsDefault="True" Click="OnSave" />
      </StackPanel>
    </StackPanel>
  </Border>
</Window>
